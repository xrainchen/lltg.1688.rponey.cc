@using lltg._1688.rponey.cc.Model.Entity
@model lltg._1688.rponey.cc.Model.Search.SystemDicSearchParameter
@{
    var returnList = Model.ReturnList as IList<SystemDicEntity>;
}
<div class="wrapper wrapper-content animated fadeInRight">
    <!-- Panel Columns & Select -->
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>全局配置</h5>
            <div class="ibox-tools">
                <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;" aria-expanded="false">
                    <i class="glyphicon glyphicon-cog"></i>
                </a>
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <form role="form" class="form-inline" method="POST" action="@Url.Action("List")">
                <input type="hidden" value="1" name="Page" />
                @Html.HiddenFor(m => m.PageSize)
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Key, new { placeholder = "请输入Key" })
                </div>
                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit">
                    <strong>查找</strong>
                </button>
            </form>
            <div class="row row-lg">
                <table data-toggle="table" data-height="350">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Key</th>
                            <th>值</th>
                            <th>描述</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (returnList != null && returnList.Any())
                        {
                            foreach (var item in returnList)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Key</td>
                                    <td>@item.Value</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <button class="btn btn-xs btn-info " type="button" onclick="ShowPage('@Url.Action("Edit",new {item.Id})', ['800px', '500px'],'编辑配置')">
                                            <i class="glyphicon glyphicon-pencil"></i> 编辑
                                        </button>
                                        <button class="btn btn-xs btn-info " type="button" onclick="">
                                            <i class="glyphicon glyphicon-pencil"></i> 删除
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- End Panel Columns & Select -->
    @Html.Partial("_Pager", Model)
</div>

