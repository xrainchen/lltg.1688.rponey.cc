        function ProductList() {
            $.ajax({
                url: '@Url.Action("ProductList")',
                type: 'POST',
                success:function(result) {
                    console.log(result);
                }
            });
        }
        function CategoryList() {
            $.ajax({
                url: '@Url.Action("CategoryList")',
                type: 'POST',
                success: function (result) {
                    console.log(result);
                }
            });
        }
    </script>
</body>
</html>
