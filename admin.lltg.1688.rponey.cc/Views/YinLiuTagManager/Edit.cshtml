@model lltg._1688.rponey.cc.Model.ViewModel.YinLiuTagViewModel
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form class="form-horizontal m-t" method="POST" action="@Url.Action("Save")" onsubmit="return DoAjaxPostSubmitForm(this)">
                        @Html.HiddenFor(m => m.Id)
                        <div class="form-group">
                            <label class="col-sm-3 control-label">标签：</label>
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.Name)
                                <span class="help-block m-b-none"><i class="fa fa-info-circle"></i> 标签不能为空</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-3">
                                <button class="btn btn-primary" type="submit">提交</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
